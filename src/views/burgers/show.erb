  <% end %>
</ul>

<h3>Tillbehör:</h3>
<ul>
  <% @selected_ingredients.select { |ingredient| ingredient['type'] == 'Tillbehor' }.each do |ingredient| %>
    <li><%= ingredient['name'] %> - <%= ingredient['price'] %> kr</li>
  <% end %>
</ul>

<h3>Totalt pris: <%= total_price %> kr</h3>

</body>
</html>