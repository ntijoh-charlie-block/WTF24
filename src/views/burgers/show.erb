    <li><%= ingredient['name'] %> - <%= ingredient['price'] %> kr</li>
  <% end %>
</ul>

<h3>Sås:</h3>
<ul>
  <% @selected_ingredients.select { |ingredient| ingredient['type'] == 'Sas' }.each do |ingredient| %>
